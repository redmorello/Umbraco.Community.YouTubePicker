<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <StaticWebAssetBasePath>/</StaticWebAssetBasePath>
  </PropertyGroup>

  <PropertyGroup>
    <Product>Umbraco.Community.Umbraco.Community.YouTubePicker</Product>
    <PackageId>Umbraco.Community.Umbraco.Community.YouTubePicker</PackageId>
    <Title>Umbraco .Community .You Tube Picker </Title>
    <Description>...</Description>
    <PackageTags>umbraco;umbraco-marketplace</PackageTags>
    <Authors>Ian Houghton</Authors>
    <Copyright>$([System.DateTime]::UtcNow.ToString(`yyyy`)) Â© Ian Houghton</Copyright>
    <PackageProjectUrl>https://github.com/redmorello/Umbraco.Community.YouTubePicker</PackageProjectUrl>
    <RepositoryUrl>https://github.com/redmorello/Umbraco.Community.YouTubePicker</RepositoryUrl>
    <PackageReadmeFile>README_nuget.md</PackageReadmeFile>
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon></PackageIcon>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Umbraco.Cms.Web.Website" Version="17.0.0-rc1" />
    <PackageReference Include="Umbraco.Cms.Web.Common" Version="17.0.0-rc1" />
    <PackageReference Include="Umbraco.Cms.Api.Common" Version="17.0.0-rc1" />
    <PackageReference Include="Umbraco.Cms.Api.Management" Version="17.0.0-rc1" />
  </ItemGroup>

  <ItemGroup>
    <!-- Dont include the client folder as part of packaging nuget build -->
    <Content Remove="Client\**" />

    <!-- However make the Umbraco-package.json included for dotnet pack or nuget package and visible to the solution -->
    <None Include="Client\public\umbraco-package.json" Pack="false" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\docs\README_nuget.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
